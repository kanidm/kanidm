#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)

# be REALLY noisy
export DH_VERBOSE=1
export DH_OPTIONS=-v

export DEB_BUILD_OPTIONS=noautodbgsym

PKGDIR=debian/kanidm-ssh
BINDIR=${PKGDIR}/usr/sbin/

%:
	dh $@

override_dh_auto_clean:

override_dh_autoreconf:
	./platform/debian/install_deps.sh

override_dh_auto_build:
	dh_auto_build -- release/kanidm-ssh

override_dh_auto_test:
override_dh_shlibdeps:
override_dh_strip:

override_dh_auto_install:
	mkdir -p ${BINDIR}
	install \
		-g root -o root \
		target/release/kanidm_ssh_authorizedkeys \
		${BINDIR}
	install \
		-g root -o root \
		target/release/kanidm_ssh_authorizedkeys_direct \
		${BINDIR}

override_dh_installexamples:
	mkdir -p ${PKGDIR}/usr/share/kanidm/
	install -D \
		-g root -o root \
		examples/kanidm \
		${PKGDIR}/usr/share/kanidm/
